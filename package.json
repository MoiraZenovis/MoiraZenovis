{
  "name": "moira-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 8080",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint",
    "docker:dev": "docker compose up dev",
    "docker:build": "docker build -t moira-portfolio:prod .",
    "docker:preview": "docker run -p 8080:80 moira-portfolio:prod",
    "docker:lint": "docker compose run --rm dev npm run lint",
    "docker:typecheck": "docker compose run --rm dev npm run typecheck",
    "docker:validate": "docker compose run --rm dev npm run validate",
    "docker:test": "docker compose run --rm dev npm run test"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1",
    "framer-motion": "^10.12.16",
    "lucide-react": "^0.268.0",
    "react-helmet-async": "^1.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.0",
    "tailwindcss": "^3.4.8",
    "postcss": "^8.4.24",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.36.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "prettier": "^2.8.8",
    "husky": "^8.1.0",
    "lint-staged": "^14.3.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": ["eslint --max-warnings 0", "prettier --write"],
    "src/**/*.{css,json,md}": ["prettier --write"]
  }
}
